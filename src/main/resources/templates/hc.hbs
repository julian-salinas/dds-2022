{{#partial "content"}}

<div class="left">
<h3>Cálculo HC Mensual</h3>
<form action="/hc-org" method="post">

    <select id="unidadHCMId" name="unidadHC" class="select-field">
        <option value="gCO2">gCO2</option>
        <option value="kgCO2" selected>KgCO2</option>
        <option value="tnCO2">TnCO2</option>
    </select>

    <button value="Mensual" type="submit" class="boton" name="tipoCalculo">
        Calcular
    </button>
</form>

<h3 class="text">
    {{#if error.error}}
        <p style="color:red;"> Error: {{error.descripcion}} </p>
    {{else}}
        {{#if esMensual}} {{ mensual }} {{ unidad }} {{else}} {{/if}}
    {{/if}}
</h3>
</div>
<div class="right">
<h3>Cálculo HC Anual</h3>
<form action="/hc-org" method="post">

    <select id="unidadHCAId" name="unidadHC" class="select-field">
        <option value="gCO2">gCO2</option>
        <option value="kgCO2" selected>KgCO2</option>
        <option value="tnCO2">TnCO2</option>
    </select>

    <button value="Anual" type="submit" class="boton" name="tipoCalculo">
        Calcular
    </button>
</form>
<h3 class="text">
    {{#if error.error}}
        <p style="color:red;"> Error: {{error.descripcion}} </p>
    {{else}}
        {{#if esMensual}} {{else}} {{ anual }} {{ unidad }} {{/if}}
    {{/if}}
</h3>
</div>

{{/partial}}


