{{#partial "contenido"}}
    <div class="mb-3">
        <center>
            {{#if error}}
                <p class="red"> Error: {{descripcion}} </p>
            {{/if}}
        </center>
    </div>
    <div class = "container">
        <form action="/agregarTramo" method="POST">
            <div class = "container">
                <h1> Medio </h1>
                <select id="medio" name="medio" onchange="esconder()">
                    <option value="pie" selected>Pie</option>
                    <option value="bici">Bicicleta</option>
                    <option value="servicioContratado">Servicio Contratado</option>
                    <option value="vehiculoParticular">Vehiculo Particular</option>
                    <option value="transportePublico">Transporte PÃºblico</option>
                </select>
            </div>

            <div class = "container" id="ubicacionInicio">
                <h2> Ubicacion Inicio </h2>

                <div class="mb-3">
                    <label for="paisId" class="form-label">Pais</label>
                    <input type="text" class="form-control" id="paisId" name="paisInicio" value="ARGENTINA">
                </div>

                <div class="mb-3">
                    <label for="provinciaId" class="form-label">Provincia</label>
                    <input type="text" class="form-control" id="provinciaId" name="provinciaInicio" value="BUENOS AIRES">
                </div>

                <div class="mb-3">
                    <label for="municipioId" class="form-label">Municipio</label>
                    <input type="text" class="form-control" id="municipioId" name="municipioInicio" value="AVELLANEDA">
                </div>

                <div class="mb-3">
                    <label for="localidadId" class="form-label">Localidad</label>
                    <input type="text" class="form-control" id="localidadId" name="localidadInicio" value="AVELLANEDA">
                </div>

                <div class="mb-3">
                    <label for="calle" class="form-label">Calle</label>
                    <input type="text" class="form-control" id="calle" name="calleInicio" value="Bonifacio">
                </div>

                <div class="mb-3">
                    <label for="altura" class="form-label">Altura</label>
                    <input type="text" class="form-control" id="altura" name="alturaInicio" value="1231">
                </div>


            </div>

            <div class = "container" id="ubicacionFin">
                <br>
                <h2> Ubicacion Fin </h2>

                <div class="mb-3">
                    <label for="pais2Id" class="form-label">Pais</label>
                    <input type="text" class="form-control" id="pais2Id" name="paisFin" value="ARGENTINA">
                </div>

                <div class="mb-3">
                    <label for="provincia2Id" class="form-label">Provincia</label>
                    <input type="text" class="form-control" id="provincia2Id" name="provinciaFin" value="BUENOS AIRES">
                </div>

                <div class="mb-3">
                    <label for="municipio2Id" class="form-label">Municipio</label>
                    <input type="text" class="form-control" id="municipio2Id" name="municipioFin" value="AVELLANEDA">
                </div>

                <div class="mb-3">
                    <label for="localidad2Id" class="form-label">Localidad</label>
                    <input type="text" class="form-control" id="localidad2Id" name="localidadFin" value="AVELLANEDA">
                </div>

                <div class="mb-3">
                    <label for="calle2" class="form-label">Calle</label>
                    <input type="text" class="form-control" id="calle2" name="calleFin" value="Bonifacio">
                </div>

                <div class="mb-3">
                    <label for="altura2" class="form-label">Altura</label>
                    <input type="text" class="form-control" id="altura2" name="alturaFin" value="1490">
                </div>
            </div>

            <div class = "container" id="paradas" style="display:none;">
              <h2> Tipo de Transporte publico </h2>
              <select id="tipoDeTransportePublico" name="tipoDeTransportePublico">
                <option value="COLECTIVO">Colectivo</option>
                <option value="TREN">Tren</option>
                <option value="SUBTE">Subte</option>
              </select>

              <h2> Parada inicio </h2>
              <select id="paradaInicio" name="paradaInicio">
                <option value="0">No</option>
                <option value="1">Si</option>
              </select>

              <h2> Parada fin </h2>
              <select id="paradaFin" name="paradaFin">
                <option value="0">No</option>
                <option value="1">Si</option>
              </select>

            </div>

            <div class="container" id="servicioContratado" style="display:none;">
                <div class="mb-3">
                    <label for="tipoDeServicio" class="form-label">Tipo de Servicio</label>
                    <input type="text" class="form-control" id="tipoDeServicio" name="tipoDeServicio" value="Tipo de Servicio">
                </div>

                <div class="mb-3">
                    <label for="combustibleConsumidoPorKM" class="form-label">Combustible Consumido Por KM</label>
                    <input type="number" class="form-control" id="combustibleConsumidoPorKM" name="combustibleConsumidoPorKM" value="100">
                </div>
            </div>

            <div class="container" id="vehiculoParticular" style="display:none;">
                <h3>Tipo de Vehiculo</h3>
                <select id="tipoDeVehiculo" name="tipoDeVehiculo">
                  <option value="MOTO">Moto</option>
                  <option value="AUTO">Auto</option>
                  <option value="CAMIONETA">Camioneta</option>
                </select>

                <h3>Tipo de Combustible</h3>
                <select id="tipoDeCombustible" name="tipoDeCombustible">
                  <option value="GNC">GNC</option>
                  <option value="NAFTA">Nafta</option>
                  <option value="ELECTRICO">Electrico</option>
                  <option value="GASOIL">Gasoil</option>
                </select>

                <div class="mb-3">
                    <label for="combustibleConsumidoPorKM" class="form-label">Combustible Consumido Por KM</label>
                    <input type="number" class="form-control" id="combustibleConsumidoPorKM" name="combustibleConsumidoPorKM" value="100">
                </div>
            </div>

            <button name="tramo" type="submit" class="btn btn-primary" value="fin">cargar Trayecto</button>
            <button name="tramo" type="submit" class="btn btn-primary" value="tramo">Agregar Otro Tramo</button>
        </form>
    </div>


    <script>
      function esconder() {
          switch (document.getElementById("medio").value) {
            case "bici":
              document.getElementById("ubicacionInicio").style.display = "block";
              document.getElementById("ubicacionFin").style.display = "block";
              document.getElementById("paradas").style.display = "none";
              document.getElementById("servicioContratado").style.display = "none";
              document.getElementById("vehiculoParticular").style.display = "none";
              break;
            case "pie":
              document.getElementById("ubicacionInicio").style.display = "block";
              document.getElementById("ubicacionFin").style.display = "block";
              document.getElementById("paradas").style.display = "none";
              document.getElementById("servicioContratado").style.display = "none";
              document.getElementById("vehiculoParticular").style.display = "none";
              break;
            case "servicioContratado":
              document.getElementById("ubicacionInicio").style.display = "block";
              document.getElementById("ubicacionFin").style.display = "block";
              document.getElementById("paradas").style.display = "none";
              document.getElementById("servicioContratado").style.display = "block";
              document.getElementById("vehiculoParticular").style.display = "none";
              break;
            case "vehiculoParticular":
              document.getElementById("ubicacionInicio").style.display = "block";
              document.getElementById("ubicacionFin").style.display = "block";
              document.getElementById("paradas").style.display = "none";
              document.getElementById("servicioContratado").style.display = "none";
              document.getElementById("vehiculoParticular").style.display = "block";
              break;
            case "transportePublico":
              document.getElementById("ubicacionInicio").style.display = "none";
              document.getElementById("ubicacionFin").style.display = "none";
              document.getElementById("paradas").style.display = "block";
              document.getElementById("servicioContratado").style.display = "none";
              document.getElementById("vehiculoParticular").style.display = "none";
              break;
          }
      }
    </script>
{{/partial}}
