{{#partial "content"}}
    <div class="left">
      <div class="big-title">
        <h1>Crear un trayecto</h1>
      </div>
      <p class="text">
        ¿Qué tipo de trayecto querés crear? 😐
      </p>

    <form action="/trayecto" method="POST">
      <button name="trayecto" value="trayecto" type="submit" class="boton" style="border: none;cursor:pointer;">Crear trayecto común</button>
      <button name="trayecto" value="trayecto-comp" type="submit" class="boton" style="border: none;cursor:pointer;">Crear trayecto compartido</button>
    </form>

    <br/><br/>

    <h4> Mis trayectos </h4>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"> Origen </th>
          <th scope="col"> Destino </th>
        </tr>
      </thead>

      <tbody>
        {{#each trayectos}}
            <tr>
                <td>{{ubicacionInicio.calle}} {{ubicacionInicio.altura}}</td>
                <td>{{ubicacionFin.calle}} {{ubicacionFin.altura}}</td>
            </tr>
        {{/each}}
      </tbody>
    </table>

    </div>

    <div class="right">
      <img src="img/car.svg" alt="" class=""/>
    </div>
{{/partial}}

{{>base.hbs}}