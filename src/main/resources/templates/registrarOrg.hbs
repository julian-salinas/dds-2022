                    <div class="col-md-6">
                        <label for="exampleInput8" class="form-label">Tipo de Organizacion</label>
                        <select
                                id="tipo"
                                name="tipo"
                                class="form-select mb-3"
                                aria-label="Default select example"
                                >
                          <option value="GUBERNAMENTAL"> Gubernamental </option>
                          <option value="ONG"> Ong </option>
                          <option value="EMPRESA"> Empresa </option>
                          <option value="INSTITUCION" selected> Institucion </option>
                        </select>
                      </div>

                      <div class="col-md-6">
                        <label for="exampleInput8" class="form-label">Clasificacion de la Organizacion</label>
                        <select
                                id="clasificacion"
                                name="clasificacion"
                                class="form-select mb-3"
                                aria-label="Default select example"
                                >
                              <option value="MINISTERIO"> Ministerio </option>
                              <option value="UNIVERSIDAD" selected> Universidad </option>
                              <option value="ESCUELA"> Escuela </option>
                              <option value="EMPRESA_SECTOR_PRIMARIO"> Empresa del sector primario </option>
                              <option value="EMPRESA_SECTOR_SECUNDARIO"> Empresa del sector secundario </option>
                        </select>
                      </div>
                    </div>
                    </div>
                  </div>
                </div>
              <!-- Card footer -->
              <div class="card-footer text-end py-4 px-5 bg-light border-0">
                <button type="submit" class="btn btn-primary btn-rounded">
                  OK
                </button>
              </div>
            </form>
          </div>
        </div>
